<h1>{{title}}</h1>
<p>Bem vindo ao Jardim Zumbi</p>

<form class="action-buttons" action="/people/eaten?_method=PUT" method="POST">
  <fieldset>
    <legend>Comer cerebros</legend>
    <div class="container-fluid form-rows">
      <div class="row">
        <div class="col-xs-3">
          <label for="zombie" class="control-label">Quem vai comer?</label>
        </div>
        <div class="col-xs-6">
          <select class="form-control" name="zombie" id="zombie">
            {{#each zombies}}
              <option value="{{id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-3">
          <label for="person" class="control-label">Quem?</label>
        </div>
        <div class="col-xs-6">
          <select class="form-control" name="person" id="person">
            {{#each people}}
              <option value="{{id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="col-xs-3">
          <button type="submit" class="btn btn-default">Comer</button>
        </div>
      </div>
    </div>
  </fieldset>
</form>


